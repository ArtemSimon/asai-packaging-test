<odoo>
    
    <record id="view_packaging_report_form" model="ir.ui.view">
        <field name="name">asai.packer.report.form</field>
        <field name="model">asai.packer.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="packer_name"/>
                    <field name="qty_packed_total"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Таблица отображения -->
    <record id="view_packaging_report_list" model="ir.ui.view">
        <field name="name">asai.packer.report.list</field>
        <field name="model">asai.packer.report</field>
        <field name="arch" type="xml">
            <list string="Packaging Statistics">
                <field name="packer_name"/>
                <field name="qty_packed_total"/>
            </list>
        </field>
    </record>

    <!-- Action  -->
    <record id="action_packaging_report" model="ir.actions.act_window">
        <field name="name">Packaging Statistics</field>
        <field name="res_model">asai.packer.report</field>
        <field name="view_mode">list</field>
        <field name="help">Total packed items per operator.</field>
    </record>

    <!-- Кнопка в меню -->
    <menuitem 
        id="menu_packaging_report"
        name="Statistics"
        parent="menu_packaging_root"
        action="action_packaging_report"/>
</odoo>