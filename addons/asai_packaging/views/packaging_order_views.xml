<odoo>
    <!-- Форма упаковки -->
    <record model="ir.ui.view" id="view_packaging_order_form">
        <field name="name">asai.packaging.order.form</field>
        <field name="model">asai.packaging.order</field>
        <field name="arch" type="xml">
            <form string="Packaging Order">
                <header>
                    <!-- Кнопка: Начать упаковку (видна только в статусе draft) -->
                    <button name="action_start" type="object" string="Start Packing" 
                            icon="fa-play" invisible="status != 'draft'"/>

                    <!-- Кнопка: Завершить упаковку (видна только если in_progress и всё упаковано) -->
                    <button name="action_done" type="object" string="Finish Packing" class="btn-primary"
                            icon="fa-check" invisible="status != 'in_progress' or not is_complete"/>

                    <!-- Кнопка: Сбросить (видна только если не draft) -->
                    <button name="action_reset" type="object" string="Reset" class="btn-secondary"
                            icon="fa-undo" invisible="status == 'draft'"/>

                    <!-- Кнопка: Отменить заказ -->
                    <button name="action_open_cancel" type="object" string="Cancel Order" class="btn-danger"
                            icon="fa-times" invisible="status in ('done', 'cancelled')"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="packer_name"/>
                        <field name="status" widget="statusbar">
                            <attribute name="colors">
                                <item name="draft" color="gray"/>
                                <item name="in_progress" color="blue"/>
                                <item name="done" color="green"/>
                                <item name="cancelled" color="red"/>
                            </attribute>
                        </field>
                    </group>
                   
                    <div class='alert alert info' style="margin: 10px 0;">
                        <field name='scan_code' placeholder='Сканируйте QR-код...' autofocus="true"/>
                        <button name='action_scan_code' type='object' string='Scan' class='btm-primary' nolabel="1"/>
                    </div>

                    <div invisible="status != 'cancelled'">
                        <h4>Cause for Cancellation:</h4>
                        <field name="cancel_cause" readonly="1"/>
                    </div>
                    
                    <notebook>
                        <page string="Product Lines">
                            <field name="detail_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="product_name"/>
                                    <field name="dimensions"/>
                                    <field name="qty_required"/>
                                    <field name="qty_packed"/>
                                    <field name="qty_scan_add"/>
                                    <field name="qr_code"/>
                                    <button name="action_add_packed" type="object" string="+" icon="fa-plus"/>
                                    <button name="action_remove_packed" type="object" string="-" icon="fa-minus"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Список заказов -->
    <record model="ir.ui.view" id="view_packaging_order_list">
        <field name="name">asai.packaging.order.tree</field>
        <field name="model">asai.packaging.order</field>
        <field name="arch" type="xml">
            <list string="Packaging Orders">
                <field name="name"/>
                <field name="packer_name"/>
                <field name="status"/>
                <field name="is_complete"/>
            </list>
        </field>
    </record>
</odoo>
